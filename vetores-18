#include <stdio.h>

/*2. Faça um programa que faça a inversão de um vetor em um segundo vetor (vazio).
Ou seja, o último elemento do vetor1 deve ser o primeiro elemento do vetor2.
Imprima o vetor2.*/

int main()
{
    int vetor1[] = {1, 2, 4};
    int vetor2[] = {};
    int i;

    for (i = 1; i < 4; i++)
    {
        vetor2[i] = vetor1[i];
    }

    for (i = 1; i < 4; i++)
    {
        printf("%d\n", vetor2[3 - i]);
    }
}
