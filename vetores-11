#include <stdio.h>

/*5. Faça um programa que leia números inteiros e armazene-os em um vetor de
tamanho 5. Utilizar laço de repetição while. Imprima o maior número do vetor
no final.*/

int main()
{
    int i, numeros[5], maiorNumero;

    maiorNumero = 0;
    i = 0;
    while (i < 5)
    {
        i = i + 1;
        printf("Informe um numero\n");
        scanf("%d", &numeros[i]);

        if (numeros[i] > maiorNumero)
        {
            maiorNumero = numeros[i];
        }
    }

    printf("Maior numero: %d\n", maiorNumero);
}
